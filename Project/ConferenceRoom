import java.util.Scanner;

public class ConferenceRoomBookingSystem {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        boolean[] roomAvailability = new boolean[10];
        for (int i = 0; i < roomAvailability.length; i++) {
            roomAvailability[i] = true;
        }

        int[] roomCapacities = {5, 10, 5, 10, 5, 20, 15, 10, 5, 10}; // Adjust capacities accordingly
        String name;
        String date;
        String time;
        int Attendees;

    System.out.println("Enter the following information:");
    System.out.print("Name: ");
    name=scanner.nextLine();
    System.out.print("Date: ");
    date=scanner.nextLine();
    System.out.print("Time: ");
    time=scanner.nextLine();
    System.out.print("Number of attendees: ");
    Attendees=scanner.nextInt();
    System.out.println("\nAvailable Rooms:");

    for(int i=0; i<roomAvailability.length; i++){
        if(roomAvailability[i]&&Attendees<=roomCapacities[i]){
            System.out.println("Room " + (i + 1) + " (Capacity: " + roomCapacities[i] + ")");
        }
    }

    int chosenRoom;
    do{
        System.out.print("\nEnter the room number you want to reserve: ");
        chosenRoom=scanner.nextInt();

        // Check if the chosen room is available and has sufficient capacity
        if(chosenRoom<1||chosenRoom>roomAvailability.length||!roomAvailability[chosenRoom - 1]||Attendees>roomCapacities[chosenRoom - 1]){
            System.out.println("Invalid choice, room not available, or insufficient capacity. Please choose again.");
        }
    }while(chosenRoom<1||chosenRoom>roomAvailability.length||!roomAvailability[chosenRoom - 1]||Attendees>roomCapacities[chosenRoom - 1]);

    roomAvailability[chosenRoom - 1]=false;

    System.out.println("\nReservation Details:");
    System.out.println("Name: " + name);
    System.out.println("Date: " + date);
    System.out.println("Time: " + time);
    System.out.println("Number of attendees: " + Attendees);
    System.out.println("Reserved Room: " + chosenRoom);


        scanner.close();
    }
}
